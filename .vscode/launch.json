{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGW64\\bin\\gdb.exe",
                "externalConsole": false,
                "setupCommands": [{
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }],
                "preLaunchTask": "Build (g++)"
            },
            "osx": {
                "MIMode": "lldb",
                "externalConsole": true,
                "logging": {
                    "trace": true,
                    "traceResponse": true,
                    "engineLogging": true
                },
                "preLaunchTask": "Build (clang++)"
            },
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "externalConsole": false,
                "setupCommands": [{
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }],
                "preLaunchTask": "Build (g++)"
            }
        }
    ]
}